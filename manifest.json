{
    "manifest_version": 2,

    "name": "Chrome Gitlab Notifier",
    "description": "Notify Gitlab events (Commit, Issue, MergeRequest and Milestone)",
    "version": "1.0.8",

    "icons": {
        "48" : "img/gitlab-icon.png"
    },

    "permissions": [
        "background",
        "notifications",
        "http://*/",
        "https://*/"
    ],

    "options_page": "options.html",

    "background": {
        "page" : "background.html"
    },

    "browser_action": {
        "default_icon": "img/gitlab-icon.png",
        "default_popup": "popup.html"
    }
}